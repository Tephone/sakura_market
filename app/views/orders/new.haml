%h3 いくつ購入しますか？
= form_for @order do |f|
  .field
    = f.hidden_field :user_id, :value => current_user.id
  = f.fields_for :order_products do |op|
    = op.number_field :amount
    = op.hidden_field :product_id, :value => @product.id
    = op.hidden_field :user_id, :value => current_user.id
    = op.hidden_field :order_id, :value => @order.id

  %br
  %br

  .actions
    = f.submit '購入する'
